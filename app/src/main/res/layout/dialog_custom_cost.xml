<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Base Cost"
        android:inputType="number"
        android:id="@+id/input_custom_dialog_base" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Base Cost for"
        android:inputType="number"
        android:id="@+id/input_custom_dialog_base_distance" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost per Distance"
        android:inputType="number"
        android:id="@+id/input_custom_dialog_distance" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost per Time"
        android:inputType="number"
        android:id="@+id/input_custom_dialog_time" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Outcity Premium"
        android:inputType="number"
        android:id="@+id/input_custom_dialog_premium_outcity" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Night Premium"
        android:inputType="number"
        android:id="@+id/input_custom_dialog_premium_night" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Night Premium Start"
        android:inputType="time"
        android:id="@+id/input_custom_dialog_premium_night_start" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Night Premium End"
        android:inputType="time"
        android:id="@+id/input_custom_dialog_premium_night_end" />

</LinearLayout>